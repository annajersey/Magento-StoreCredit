<?xml version="1.0"?>
<!--
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <tab id="exto" translate="label" sortOrder="10">
            <label>Exto</label>
        </tab>
        <section id="exto_store_credit" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Store Credit</label>
            <tab>exto</tab>
            <resource>Exto_StoreCredit::exto_store_credit</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>General</label>
                <field id="points_ratio" translate="label" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Points Ratio</label>
                    <comment>
                        Insert value that multiplying to, to convert points to the money.
                    </comment>
                </field>
                <field id="shopping_cart_text" translate="label" type="textarea" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Shopping cart information text</label>
                    <comment>
                         This will appear in the shopping cart totals section, use {available_balance}
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
